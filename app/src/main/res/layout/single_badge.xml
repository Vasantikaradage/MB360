<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llBadge"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/left_margin"
    app:cardCornerRadius="10dp"
    app:cardElevation="@dimen/cardElevation">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="70dp"
        android:padding="@dimen/left_margin">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_badge"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginRight="@dimen/cardMargin"
            android:scaleType="fitCenter"
            android:src="@drawable/unhappy"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/guideline6"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.2" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You have been awarded"
            android:textColor="@color/cpb_black"
            android:textSize="12sp"
            android:maxLines="4"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/txtRewards"
            app:layout_constraintLeft_toRightOf="@id/guideline6"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtRewards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No badges earned today"
            android:textColor="@color/cpb_black"
            android:textSize="15sp"
            android:layout_marginTop="4dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/txt_reward_summary"
            app:layout_constraintLeft_toRightOf="@id/guideline6"
            app:layout_constraintTop_toBottomOf="@id/txt_headline" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:scaleType="centerInside"
            android:id="@+id/arrow1"
            android:src="@drawable/collpased_arrow"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_reward_summary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            android:visibility="visible"
            android:text="Achieve atleast one of the recommended goals to earn a badge"
            android:textColor="@color/cpb_black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/arrow1"
            app:layout_constraintLeft_toRightOf="@id/guideline6"
            app:layout_constraintTop_toBottomOf="@id/txtRewards" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>