<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/left_margin">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/deviceImage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_phone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/deviceType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small_margin"
        android:text="Samsung A30F"
        android:textSize="14sp"
        android:includeFontPadding="false"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/data_via"
        app:layout_constraintLeft_toRightOf="@id/deviceImage"
        app:layout_constraintRight_toLeftOf="@id/deviceStatus"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/data_via"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small_margin"
        android:text="via Google Fit "
        android:textSize="11sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/deviceImage"
        app:layout_constraintTop_toBottomOf="@id/deviceType" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/deviceStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/stats_count"
        android:text="CONNECTED"
        android:paddingLeft="@dimen/largeTextSize"
        android:paddingRight="@dimen/largeTextSize"
        android:paddingTop="@dimen/cardMargin"
        android:paddingBottom="@dimen/cardMargin"
        android:textStyle="bold"
        android:textSize="10sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
