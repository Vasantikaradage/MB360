<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/insurance_toolbar_layout"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@drawable/wellness_toolbar_background">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/wellness_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_centerInParent="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleCentered="true"
        app:titleTextAppearance="@style/App_font_toolBar"
        app:titleTextColor="@color/white" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/mb360_whitelogo"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/back_toolbar"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/back"
        android:visibility="visible" />

    <TextView
        android:id="@+id/titleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/back_toolbar"
        android:layout_marginStart="12dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@id/back_toolbar"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:visibility="gone"
        tools:text="title for wellness"
        tools:visibility="visible" />


</RelativeLayout>
