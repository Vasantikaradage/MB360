<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/material_size_4"
    app:strokeColor="@color/shimmer"
    app:strokeWidth="1dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <RelativeLayout
            android:id="@+id/dental_title_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/material_size_8"
            android:layout_marginTop="@dimen/material_size_8"
            android:layout_marginEnd="@dimen/material_size_8"
            android:layout_marginBottom="@dimen/material_size_8"
            android:orientation="horizontal">


            <View
                android:id="@+id/image_shimmer"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:background="#A7A6A6" />

            <View
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/image_shimmer"
                android:background="@color/shimmer"
                tools:text="CLEANING AND POLISHING WITH DENTAL CHECKUP" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dental_details_holder"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/dental_title_holder"
            android:layout_centerHorizontal="true"
            android:background="@drawable/dental_border_shimmer">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/separator">

                <View
                    android:layout_width="100dp"
                    android:layout_height="18sp"
                    android:layout_centerInParent="true"
                    android:background="@color/shimmer" />


            </RelativeLayout>

            <View
                android:id="@+id/separator"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@color/dark_grey"
                android:fontFamily="@font/poppins_regular"
                android:maxLines="1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/separator">

                <View
                    android:layout_width="100dp"
                    android:layout_height="18dp"
                    android:layout_centerInParent="true"
                    android:background="@color/shimmer" />
            </RelativeLayout>

        </RelativeLayout>

        <View
            android:layout_width="100dp"
            android:layout_height="18sp"
            android:layout_below="@id/dental_details_holder"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/material_size_12"
            android:layout_marginBottom="@dimen/material_size_12"
            android:background="@color/shimmer" />


    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>