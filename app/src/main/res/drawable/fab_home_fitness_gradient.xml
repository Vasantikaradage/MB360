<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <ripple android:color="@color/grey2" />
    </item>
    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="0"
                android:endColor="@color/yellowlightbg"
                android:startColor="@color/yellowdarkbg" />
            <size
                android:width="56dp"
                android:height="56dp" />
        </shape>
    </item>
    <item android:gravity="center">
        <bitmap
            android:gravity="fill_horizontal"
            android:src="@drawable/home_blue"
            android:tint="@color/white" />

    </item>
</layer-list>